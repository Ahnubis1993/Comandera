<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="313.0" prefWidth="430.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.comandacamarero.LoginControlador">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-font-size: 30; -fx-font-weight: bold;">Login</Label>

    <TextField fx:id="usuarioTextoLogin" maxHeight="27.0" maxWidth="206.0" minHeight="0.0" minWidth="0.0" prefHeight="27.0" prefWidth="206.0" promptText="Nombre de usuario" />
    <PasswordField fx:id="usuarioTextoContrasenia" maxHeight="27.0" maxWidth="206.0" minHeight="0.0" minWidth="0.0" prefHeight="27.0" prefWidth="206.0" promptText="Contraseña" />

    <Button onAction="#iniciarSesion" style="-fx-font-size: 14;" text="Iniciar Sesión" />
</VBox>
